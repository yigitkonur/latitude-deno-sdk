{
  "name": "@yigitkonur/latitude-deno-sdk",
  "version": "1.0.2",
  "description": "Latitude Deno SDK - Community fork of the official Node.js SDK, rebuilt for Deno and Supabase Edge Functions",
  "license": "MIT",
  "exports": "./src/mod.ts",

  "imports": {
    "eventsource-parser": "npm:eventsource-parser@^2.0.1",
    "eventsource-parser/stream": "npm:eventsource-parser@^2.0.1/stream",
    "zod": "npm:zod@^3.23.0",
    "promptl-ai": "npm:promptl-ai@^0.9.4",
    "@std/assert": "jsr:@std/assert@^1.0.0"
  },

  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window", "esnext"]
  },

  "tasks": {
    "check": "deno check src/mod.ts",
    "test": "deno test --allow-net --allow-env src/tests/",
    "fmt": "deno fmt src/",
    "lint": "deno lint src/"
  },

  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  },

  "lint": {
    "rules": {
      "exclude": [
        "no-explicit-any",
        "verbatim-module-syntax",
        "no-slow-types",
        "ban-types",
        "require-await"
      ]
    }
  },

  "publish": {
    "include": ["src/", "README.md", "LICENSE.md", "CHANGELOG.md"],
    "exclude": ["src/tests/"]
  }
}
